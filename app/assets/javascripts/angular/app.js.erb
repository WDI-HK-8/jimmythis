var app = angular.module('jimmythis', ['ngRoute','ng-token-auth']);

app.config(['$routeProvider','$authProvider', function($routeProvider, $authProvider) {
  $routeProvider.
    when('/', {
      templateUrl: "<%= asset_path('static_pages/index.html') %>",
      controller: 'StaticPagesCtrl'
    }).
    when('/signup', {
      templateUrl: "<%= asset_path('auth/signup.html') %>",
      controller: 'SignUpCtrl'
    }).
    when('/login', {
      templateUrl: "<%= asset_path('auth/login.html') %>",
      controller: 'LogInCtrl'
    }).
    when('/services', {
      templateUrl: "<%= asset_path('services/index.html') %>",
      controller: 'ServicesIndexCtrl'
    }).
    when('/account', {
      templateUrl: "<%= asset_path('auth/account.html') %>",
      controller: 'AccountCtrl'
    }).
    when('/profile/:id', {
      templateUrl: "<%= asset_path('auth/profile.html') %>",
      controller: 'ProfileCtrl'
    }).
    when('/services/create', {
      templateUrl: "<%= asset_path('services/create.html') %>",
      controller: 'ServicesCreateCtrl'
    }).
    when('/categories/:id', {
      templateUrl: "<%= asset_path('categories/show.html') %>",
      controller: 'CategoryShowCtrl'
    }).
    when('/services/update/:id', {
      templateUrl: "<%= asset_path('services/update.html') %>",
      controller: 'ServicesUpdateCtrl'
    }).
    when('/services/:id', {
      templateUrl: "<%= asset_path('services/show.html') %>",
      controller: 'ServiceShowCtrl'
    })

  $authProvider.configure({
    apiUrl: "<%= ENV['URL'] %>" || 'http://localhost:3000'
  })
}]);